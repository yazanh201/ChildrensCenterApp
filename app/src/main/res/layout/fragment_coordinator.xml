<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F8"
    android:padding="24dp"
    android:layoutDirection="rtl">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardCoordinator"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:minHeight="460dp"
            android:padding="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ברוך הבא, רכז!"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="#1B1F3B"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="בחר פעולה:"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="28dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddActivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" הוסף פעילות חדשה"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:minWidth="240dp"
                android:padding="12dp"
                app:cornerRadius="50dp"
                app:backgroundTint="#4A6CF7"
                android:layout_marginBottom="16dp"
                android:elevation="6dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShowActivities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" הצג את כל הפעילויות"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:minWidth="240dp"
                android:padding="12dp"
                app:cornerRadius="50dp"
                app:backgroundTint="#00BCD4"
                android:layout_marginBottom="16dp"
                android:elevation="6dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShowGuides"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" הצג את כל המדריכים"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:minWidth="240dp"
                android:padding="12dp"
                app:cornerRadius="50dp"
                app:backgroundTint="#607D8B"
                android:elevation="6dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
