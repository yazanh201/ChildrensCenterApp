<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F8"
    android:padding="24dp"
    android:layoutDirection="rtl">

    <!-- כרטיס אופציות להורה -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardParentOptions"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:minHeight="420dp"
            android:padding="32dp">

            <!-- כותרת -->
            <TextView
                android:id="@+id/tvWelcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ברוך הבא, הורה !"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#1B1F3B"
                android:layout_marginBottom="12dp"/>

            <!-- תת־כותרת -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="בחר פעולה:"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginBottom="28dp"/>

            <!-- כפתור הצג פעילויות כלליות -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnShowActivities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" הצג פעילויות"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:minWidth="220dp"
                android:padding="12dp"
                app:cornerRadius="40dp"
                app:backgroundTint="#4A6CF7"
                android:layout_marginBottom="16dp"
                android:elevation="4dp" />

            <!-- כפתור הצג פעילויות של הילד -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnChildActivities"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" פעילויות של הילד"
                android:textSize="16sp"
                android:textColor="@android:color/white"
                android:minWidth="220dp"
                android:padding="12dp"
                app:cornerRadius="40dp"
                app:backgroundTint="#00BCD4"
                android:elevation="4dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
