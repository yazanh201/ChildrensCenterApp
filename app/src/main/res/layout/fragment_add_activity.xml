<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- כותרת ראשית -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✨ הוספת פעילות חדשה"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <!-- שם פעילות -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שם הפעילות:"
            style="@style/FormLabel"/>
        <EditText
            android:id="@+id/etName"
            android:hint="לדוגמה: מדע כיפי"
            style="@style/FormInput"/>

        <!-- תחום הפעילות -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="תחום הפעילות:"
            style="@style/FormLabel"/>
        <Spinner
            android:id="@+id/spinnerDomain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <!-- מדריך -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="בחר מדריך:"
            style="@style/FormLabel"/>
        <Spinner
            android:id="@+id/spinnerGuide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <!-- תיאור -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="תיאור הפעילות:"
            style="@style/FormLabel"/>
        <EditText
            android:id="@+id/etDescription"
            android:hint="תיאור קצר של הפעילות"
            style="@style/FormInput"/>

        <!-- גיל מינימלי -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="גיל מינימלי:"
            style="@style/FormLabel"/>
        <EditText
            android:id="@+id/etMinAge"
            android:hint="למשל: 6"
            android:inputType="number"
            style="@style/FormInput"/>

        <!-- גיל מקסימלי -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="גיל מקסימלי:"
            style="@style/FormLabel"/>
        <EditText
            android:id="@+id/etMaxAge"
            android:hint="למשל: 12"
            android:inputType="number"
            style="@style/FormInput"/>

        <!-- ימים בשבוע -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ימים בשבוע:"
            style="@style/FormLabel"/>
        <EditText
            android:id="@+id/etDays"
            android:hint="לדוגמה: ראשון, שלישי"
            style="@style/FormInput"/>

        <!-- משתתפים -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="מספר משתתפים מקסימלי:"
            style="@style/FormLabel"/>
        <EditText
            android:id="@+id/etMaxParticipants"
            android:hint="למשל: 20"
            android:inputType="number"
            style="@style/FormInput"/>

        <!-- חד-פעמית -->
        <Switch
            android:id="@+id/switchOneTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="פעילות חד-פעמית"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="24dp" />

        <!-- כפתור שמירה -->
        <Button
            android:id="@+id/btnSave"
            android:text="💾 שמור פעילות"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:padding="12dp"
            android:layout_marginTop="12dp"/>
    </LinearLayout>
</ScrollView>