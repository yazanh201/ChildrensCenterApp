<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:padding="16dp"
    android:layout_marginVertical="8dp"
    android:elevation="2dp"
    android:backgroundTint="#FFFFFF">

    <!-- שם הפעילות -->
    <TextView
        android:id="@+id/tvActivityName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="שם פעילות"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#2E7D32"
        android:fontFamily="sans-serif-medium" />

    <!-- כפתור הוספת ביקורת כהורה -->
    <Button
        android:id="@+id/btnAddParentFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" הוסף ביקורת כהורה"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4CAF50"
        android:textSize="15sp"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif" />

    <!-- כפתור צפייה במשוב מדריך -->
    <Button
        android:id="@+id/btnViewGuideFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" צפה במשוב מהמדריך"
        android:textColor="#FFFFFF"
        android:backgroundTint="#2196F3"
        android:textSize="15sp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif" />
    <Button
        android:id="@+id/btnViewPhotos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="צפה בתמונות"
        android:layout_marginTop="8dp"/>


    <!-- קו תחתון מפריד -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="16dp" />
</LinearLayout>
